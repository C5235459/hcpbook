    <class>com.sappress.hcpbook.chp06.persistence.InvolvedPerson</class>
    <class>com.sappress.hcpbook.chp06.persistence.Attachment</class>
    <class>com.sappress.hcpbook.chp06.persistence.Incident</class>
    <class>com.sappress.hcpbook.chp06.persistence.Country</class>
    <class>com.sappress.hcpbook.chp06.persistence.Region</class>
  
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables" />
    </properties>
  </persistence-unit>
</persistence>